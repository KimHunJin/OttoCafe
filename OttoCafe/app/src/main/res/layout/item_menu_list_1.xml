<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:background="@drawable/menu_list_background"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:padding="1dp"
        android:background="@drawable/menu_list_background">
        <ImageView
            android:id="@+id/imgItemMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtItemMenuName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_item_menu"
                android:layout_weight="0.6"
                android:text="메뉴이름"
                android:gravity="left|bottom"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtItemMenuPrice"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/margin_item_menu"
                android:layout_weight="0.4"
                android:textColor="@color/colorCostPink"
                android:gravity="right|bottom"
                android:text="가격"
                android:textSize="10sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtItemMenuExplain"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:layout_marginLeft="@dimen/margin_item_menu"
            android:layout_marginTop="4dp"
            android:textColor="@color/colorTextGray"
            android:text="메뉴 설명 주저리 주저리 이것저것 챱챱 ..."
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>