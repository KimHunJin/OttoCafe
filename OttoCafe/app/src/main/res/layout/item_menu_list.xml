<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="356dp"
        android:background="@drawable/menu_list_background"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgItemMenu"
            android:layout_width="match_parent"
            android:layout_height="284dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtItemMenuName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_item_menu"
                android:layout_weight="0.6"
                android:text="메뉴이름"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:layout_weight="0.1"
                android:src="@drawable/menu_item_money" />

            <TextView
                android:id="@+id/txtItemMenuPrice"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/margin_item_menu"
                android:layout_weight="0.3"
                android:gravity="right|center_vertical"
                android:text="가격"
                android:textSize="18sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/txtItemMenuExplain"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginLeft="@dimen/margin_item_menu"
            android:layout_marginTop="4dp"
            android:text="메뉴 설명 주저리 주저리 이것저것 챱챱 ..."
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>