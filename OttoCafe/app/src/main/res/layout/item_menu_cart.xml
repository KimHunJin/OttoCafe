<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginBottom="@dimen/margin_item_menu"
    android:layout_marginTop="@dimen/margin_item_menu"
    android:background="@drawable/menu_list_background"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgItemCart"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_item_menu"
        android:layout_weight="0.2" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/margin_item_menu"
        android:layout_weight="0.8"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtItemCartName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/margin_item_menu"
            android:layout_marginRight="@dimen/margin_item_menu"
            android:layout_weight="0.5"
            android:gravity="center_vertical"
            android:text="아메리카노"
            android:textSize="@dimen/cart_item_text_size" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_item_menu"
                android:text="개수 : "
                android:textSize="@dimen/cart_item_text_size" />

            <TextView
                android:id="@+id/txtItemCartCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_item_menu"
                android:layout_toRightOf="@id/txt"
                android:text="2"
                android:textSize="@dimen/cart_item_text_size" />

            <TextView
                android:id="@+id/txtItemCartTotalCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_item_menu"
                android:text="8,000원"
                android:textSize="@dimen/cart_item_text_size" />

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>